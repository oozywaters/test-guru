<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col col-md-4">
      <h2 class="text-center"><%= t('.sign_in') %></h2>

      <div class="card border-primary">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter email' %>
            </div>
            <div class="form-group">
              <%= f.label :password %><br/>
              <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Enter your password' %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-check">
                <%= f.label :remember_me, class: 'form-check-label' do %>
                  <%= f.check_box :remember_me, class: 'form-check-input' %>
                  <%= t('.remember_me') %>
                <% end %>
              </div>
            <% end -%>

            <%= f.submit t('.sign_in'), class: 'mt-2 btn btn-primary btn-block' %>
          <% end %>
        </div>
      </div>

      <div class="mt-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
