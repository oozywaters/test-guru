<tr>
  <td class="align-middle">
    <%= content_tag :span, test.title, class: 'test-title', data: {test_id: test.id} %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td><%= test.level %></td>
  <td><%= test.questions.count %></td>
  <td>
    <%= link_to t('show'), admin_test_path(test), class: 'btn btn-primary' %>
    <%= link_to t('edit'),
                edit_admin_test_path(test),
                class: 'btn btn-primary form-inline-link',
                data: { test_id: test.id } %>
    <%= link_to t('delete'), admin_test_path(test),
                method: :delete,
                data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </td>
</tr>
