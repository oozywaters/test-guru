<div class="row justify-content-center mt-3">
  <div class="col col-md-5">
    <%= render 'shared/errors', resource: @badge %>

    <%= form_with model: [:admin, @badge], local: true do |form| %>
      <div class="form-group">

        <p>
          <%= form.label :image %>
          <%= form.text_field :image, class: 'form-control' %>
        </p>

        <p>
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
        </p>

        <p>
          <%= form.label :rule %>
          <%= form.select :rule, options_for_select(Badge.rules, selected: @badge.rule), { prompt: true }, { class: 'form-control' }  %>
        </p>

        <p>
          <%= form.label :rule_parameter %>
          <%= form.text_field :rule_parameter, class: 'form-control' %>
        </p>

        <p><%= form.submit class: 'btn btn-primary' %></p>
      </div>
    <% end %>
    <%= link_to t('back'), admin_tests_path %>
  </div>
</div>
