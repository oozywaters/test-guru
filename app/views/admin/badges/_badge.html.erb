<tr>
  <td><%= image_tag((badge.image), class: 'rounded-circle size-200px') %></td>
  <td><%= badge.title %></td>
  <td>
    <%= link_to t('show'),
                admin_badge_path(badge),
                class: 'btn btn-primary' %>
    <%= link_to t('edit'),
                edit_admin_badge_path(badge),
                class: 'btn btn-primary' %>
    <%= link_to t('delete'),
                admin_badge_path(badge),
                method: :delete, data: { confirm: t('sure?') },
                class: 'btn btn-danger form-inline-link' %>
  </td>
</tr>
